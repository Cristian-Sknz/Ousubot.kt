<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="
            http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.7.xsd">
    <persistence directory="bot-caching/cache" />
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap>1000</heap>
            <offheap unit="MB">10</offheap>
            <disk persistent="true" unit="MB">20</disk>
        </resources>
    </cache-template>
    <cache alias="api:beatmapsets" uses-template="default">
        <key-type>java.lang.Integer</key-type>
        <value-type>me.sknz.ousubot.api.models.beatmaps.BeatmapSet</value-type>
    </cache>

    <cache alias="api:lockup" uses-template="default">
        <key-type>java.lang.Integer</key-type>
        <value-type>me.sknz.ousubot.api.models.beatmaps.BeatmapSet</value-type>
    </cache>

    <cache alias="api:searchmaps" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>me.sknz.ousubot.api.models.beatmaps.BeatmapSearch</value-type>
    </cache>
    <cache alias="embed:searchmaps" uses-template="default">
        <key-type>me.sknz.ousubot.dto.BeatmapSearchRequest</key-type>
        <value-type>me.sknz.ousubot.dto.DiscordBeatmapEmbed</value-type>
    </cache>
    <cache alias="embed:beatmapsets" uses-template="default">
        <key-type>me.sknz.ousubot.dto.BeatmapSetRequest</key-type>
        <value-type>me.sknz.ousubot.dto.DiscordBeatmapEmbed</value-type>
    </cache>
</config>